{
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "pnpm run --dir docs dev",
    "build": "pnpm run --dir docs build",
    "lint": "pnpm run --dir manon lint:css",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "visreg:test": "docker compose -f visreg/compose.yml run --rm visreg-test",
    "visreg:approve": "docker compose -f visreg/compose.yml run --rm visreg-update",
    "visreg:clean": "docker compose -f visreg/compose.yml run --rm visreg-clean",
    "visreg:report": "xdg-open visreg/report/index.html || open visreg/report/index.html"
  },
  "pnpm": {
    "overrides": {
      "cookie@<0.7.0": ">=0.7.0",
      "js-yaml": "^4.1.1"
    }
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
